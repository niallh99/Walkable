# Walkable V1 Environment Variables
# Copy this file to .env and fill in your values

# ===================
# REQUIRED VARIABLES
# ===================

# Database connection string (Neon PostgreSQL)
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=

# JWT secret for authentication tokens
# Generate with: openssl rand -base64 32
JWT_SECRET=

# Google Maps API key (for geocoding and directions)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_API_KEY=

# ===================
# OPTIONAL VARIABLES
# ===================

# CORS allowed origin (defaults to same-origin in production)
# Set to your production domain, e.g., https://walkable.app
# CORS_ORIGIN=

# Disable file uploads (emergency kill-switch)
# Set to 'true' to return 503 on all upload endpoints
# DISABLE_UPLOADS=false

# Node environment
# Values: development, production, test
# NODE_ENV=development
